<div class="sidenav sidenav-left">
    <div class="logo">
        <i class="fas fa-cat text-white"></i>
    </div>

    <div class="nav-links">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="active">
            <i class="fas fa-home" style="width: 23px; height: 23px; margin-right: 3px"></i>
            <span>Home</span>
        </a>
        <a href="#" class="active">
            <i class="far fa-bell" style="width: 23px; height: 23px; margin-right: 3px; margin-left: 1px" ></i>
            <span>Notifications</span>
        </a>
        <a asp-controller="Profile" asp-action="Profile" asp-route-id="@null" class="active">
            <i class="far fa-user-circle" style="width: 23px; height: 23px; margin-right: 3px; margin-left: 2px"></i>
            <span>Profile</span>
        </a>
    </div>

    <partial name="_LoginPartial"/>
</div>

<div class="postter-navbar">
    <p class="bold-text">@ViewData["Title"]</p>
</div>

<div class="main">
    @RenderBody()
</div>

<div class="sidenav sidenav-right">
    <div class="wrapper">
        <form class="rounded-box" id="postterSearchBar" method="get" asp-controller="Home" asp-action="Search">
            <i class="fas fa-search" style="color: var(--darkGray); padding: 10px 0 10px 20px;"></i>
            <input name="searchString" class="postter-form" type="search" id="postterSearch" placeholder="Search in Postter">
            <input type="submit" style="position: absolute; left: -9999px;">
        </form>
        <hr style="border-color: var(--darkGray);">
        <a class="secondary-text" asp-controller="Home" asp-action="About">© Postter, Inc., 2021.</a>
    </div>
</div>

